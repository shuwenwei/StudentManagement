<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sww.stuinfo.mapper.AdminMapper">

    <delete id="deleteUser" parameterType="String">
        delete from user where id = #{username}
    </delete>

    <insert id="addUser" parameterType="user">
        insert into user
        <choose>
            <when test="role == 'instructor' or role == 'admin'">
                (id,password,role)
                values
                (#{username}, #{password}, #{role})
            </when>
            <otherwise>
                (id,password)
                values
                (#{username}, #{password})
            </otherwise>
        </choose>
    </insert>

    <update id="updateUser">
        update user
        <set>
            <if test="password != null and password.length() > 0">
                password = #{password},
            </if>
            <if test="role == 'stu' or role == 'instructor' or role == 'admin'">
                role = #{role},
            </if>
        </set>
        where id = #{username}
    </update>

    <insert id="addStudentInfo">
        insert into stu_info
        (id,cls_id,maj_id,ins_id,instructor)
        values
        (#{username}, #{classId},#{majorId},#{instituteId},#{instructorId})
    </insert>



    <select id="getAllInstitute" resultType="institute">
        select * from institute
    </select>

    <update id="updateInstitute" parameterType="String">
        update institute
        <set>
            name = #{name}
        </set>
        where id = #{id}
    </update>

    <insert id="addInstitute" parameterType="institute">
        insert into institute
        (id,name)
        values
        (#{id},#{name})
    </insert>

    <delete id="deleteInstitute" parameterType="String">
        delete from institute
        where id = #{id}
    </delete>



    <select id="getAllMajor" resultType="major">
        select * from major
    </select>

    <update id="updateMajor" parameterType="String">
        update major
        <set>
            <if test="name != null and name.length() > 0">name = #{name}</if>
            <if test="instituteId != null and instituteId.length() > 0">ins_id = #{instituteId}</if>
        </set>
        where id = #{id}
    </update>

    <insert id="addMajor" parameterType="major">
        insert into major
        (id,name,ins_id)
        values
        (#{id},#{name},#{instituteId})
    </insert>

    <delete id="deleteMajor" parameterType="String">
        delete from major
        where id = #{id}
    </delete>

    <select id="getAllClazz" parameterType="clazz">
        select class.id id, number, major.name , ui.name instructor
        from class
        inner join user_info ui
        on class.instructor = ui.id
        inner join major
        on major.id = class.maj_id
    </select>
</mapper>